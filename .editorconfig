root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_size = 4
indent_style = tab

[*.{sh,py,pyi,rst,toml}]
indent_size = 4

[*.md]
trim_trailing_whitespace = true

[*.{diff,patch}]
trim_trailing_whitespace = false
